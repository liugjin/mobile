ion-header-bar.bar.bar-header.bar-header-none
  a.button.button-icon.icon-left.ion-ios-close-empty(ui-sref='login()')

ion-content.login-pane(scroll="false")
  h5(style="margin-left:10px;") 手机登录
  section
    form.login-form(ng-submit='vm.doLogin()')
      .list.padding
        label.item.item-2.item-input.margin-bottom-8
          input(type='tel', ng-model='vm.phone', placeholder='请填写手机号', required)
        .code
          label.item.item-2.item-input.margin-bottom-8.left(style="width:50vw;display:inline-block;")
            input(type='text', ng-model='vm.smscode', placeholder='验证码', required)
          a.btn.right(style="width:40vw;display:inline-block;height:40px !important;background:#eee;line-height:40px;color:#666;",ng-click="vm.sendsmscode()",ng-disabled='vm.ismail')
            span(ng-if="!vm.TIME") 发送验证码
            span(ng-if="vm.TIME",style="margin-left:10px;") {{vm.TIME}}s
      .padding
        button.button.button-block.button-green(type='submit', ng-disabled='vm.isLogin') 登录








