.order
  .row.order-item
    .col.s4.item-alarm.alarm-severity-1
      .alarm
        .alarm-num {{severities[1].value}}
        .item-name 普通告警
    .col.s4.item-alarm.alarm-severity-2
      .alarm
        .alarm-num {{severities[2].value}}
        .item-name 重要告警
    .col.s4.item-alarm.alarm-severity-3
      .alarm(style="border: 0")
        .alarm-num {{severities[3].value}}
        .item-name 紧急告警
  .row.order-item
    .col.s6.item-capacity(style="padding: 0 4px 0 8px;")
      .capacity
        .capacity-img.left
          .img(ng-class="{'alarm':ups1.alarms}")
        .capacity-detail.left
          .capacity-num {{getMaxValue(ups1.loadRate)}}%
          .capacity-name 1#UPS负载容量
    .col.s6.item-capacity(style="padding: 0 8px 0 4px;")
      .capacity
        .capacity-img.left
          .img(ng-class="{'alarm':ups2.alarms}")
        .capacity-detail.left
          .capacity-num {{getMaxValue(ups2.loadRate)}}%
          .capacity-name 2#UPS负载容量
  .row.order-item
    .col.s7.item-voltage(style="padding: 0 4px 0 8px;")
      .voltage
        .voltage-img
          .img-oval-1(ng-class="{'alarm':distributor.alarms}")
          .img-oval-2(ng-class="{'alarm':distributor.alarms}")
          .img-ups
        .voltage-item
          .voltage-num {{getMaxValue(distributor.voltage)}}V
          .voltage-name 市电输入电压
        //.voltage-other
          .temperature {{distributor.temperature}}℃
          .temperature {{distributor.humidity}}%
    .col.s5.item-voltage(style="padding: 0 8px 0 4px;")
      .voltage
        .battery-name 电池房温湿度
        .battery-item
          .battery-img
            .img-oval-1(ng-class="{'alarm':battery.alarms}")
            .img-oval-2(ng-class="{'alarm':battery.alarms}")
          .battery-other
            .temperature {{battery.temperature}}℃
            .temperature {{battery.humidity}}%
  .order-item
    .air-condition-item
      .air-name 机房1#空调
      .air-img(ng-class="{'alarm':ac1.alarms}")
      .air-status {{ac1.status}}
    .air-condition-item
      .air-name 机房2#空调
      .air-img(ng-class="{'alarm':ac2.alarms}")
      .air-status {{ac2.status}}
    .air-condition-item
      .air-name 机房3#空调
      .air-img(ng-class="{'alarm':ac3.alarms}")
      .air-status {{ac3.status}}
  .order-item(style="padding: 8px 0 0")
    .rack
      .rack-title 温湿度状态
      .item-list
        .rack-item
          .rack-name 一排机柜
          .rack-img
            .img-oval-1(ng-class="{'alarm':th1.alarms}")
            .img-oval-2(ng-class="{'alarm':th1.alarms}")
          .rack-value {{th1.temperature}}℃
          .rack-value {{th1.humidity}}%
        .rack-item
          .rack-name 二排机柜
          .rack-img
            .img-oval-1(ng-class="{'alarm':th2.alarms}")
            .img-oval-2(ng-class="{'alarm':th2.alarms}")
          .rack-value {{th2.temperature}}℃
          .rack-value {{th2.humidity}}%
        .rack-item
          .rack-name 三排机柜
          .rack-img
            .img-oval-1(ng-class="{'alarm':th3.alarms}")
            .img-oval-2(ng-class="{'alarm':th3.alarms}")
          .rack-value {{th3.temperature}}℃
          .rack-value {{th3.humidity}}%
        .rack-item
          .rack-name 四排机柜
          .rack-img
            .img-oval-1(ng-class="{'alarm':th4.alarms}")
            .img-oval-2(ng-class="{'alarm':th4.alarms}")
          .rack-value {{th4.temperature}}℃
          .rack-value {{th4.humidity}}%
        .rack-item
          .rack-name 五排机柜
          .rack-img
            .img-oval-1(ng-class="{'alarm':th5.alarms}")
            .img-oval-2(ng-class="{'alarm':th5.alarms}")
          .rack-value {{th5.temperature}}℃
          .rack-value {{th5.humidity}}%
        .rack-item
          .rack-name 六排机柜
          .rack-img
            .img-oval-1(ng-class="{'alarm':th6.alarms}")
            .img-oval-2(ng-class="{'alarm':th6.alarms}")
          .rack-value {{th6.temperature}}℃
          .rack-value {{th6.humidity}}%
  .order-item(style="padding: 12px 0 0")
    .rack
      .rack-title 水浸状态
      .environmental-list
        .environmental-item
          .rack-name 1#空调水浸
          .rack-img
            .img-oval-1(ng-class="{'alarm':water1.alarms}")
            .img-oval-2(ng-class="{'alarm':water1.alarms}")
        .environmental-item
          .rack-name 风机水浸
          .rack-img
            .img-oval-1(ng-class="{'alarm':water2.alarms}")
            .img-oval-2(ng-class="{'alarm':water2.alarms}")
        .environmental-item
          .rack-name 2#3#空调水浸
          .rack-img
            .img-oval-1(ng-class="{'alarm':water3.alarms}")
            .img-oval-2(ng-class="{'alarm':water3.alarms}")
        .environmental-item
          .rack-name UPS间1#水浸
          .rack-img
            .img-oval-1(ng-class="{'alarm':water4.alarms}")
            .img-oval-2(ng-class="{'alarm':water4.alarms}")
        .environmental-item
          .rack-name UPS间2#水浸
          .rack-img
            .img-oval-1(ng-class="{'alarm':water5.alarms}")
            .img-oval-2(ng-class="{'alarm':water5.alarms}")
  .row.order-item
    .col.s12.feedback
      .feedback-title 工作情况反馈
      .feedback-content
        textarea.validate(type="text" placeholder="无反馈情况" required ng-model='comment')
  .process-btn
    .btn-renew(ng-click="refreshData()") 重新填写
    .btn-upload(ng-click="uploadData()") 完成并上传
