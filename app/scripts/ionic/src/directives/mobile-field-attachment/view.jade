.enclosure1(ng-show="!att")
    span 该工单暂无现场图片
.enclosure(ng-show="att")
    .picture(ng-repeat="(i, file) in files",ng-show="file.type=='image/jpeg' || file.type=='image/png' || file.type=='image'")
        img(src="http://{{$root.preference.ip}}{{file.url}}", alt="",style="width:100%;height:100%")
.add-btn(ng-if="showType == 2")
  .btn-floating.btn-large.waves-effect.waves-lightred.waves-light.modal-trigger(href="#modal2")
      i.material-icons add
.process-btn
  .btn-renew(ng-click="setTask(2)" ng-show="showBtns.reject") 拒绝
  .btn-hold(ng-click="saveTask(3)" ng-show="showBtns.save") 保存
  .btn-upload(ng-click="setTask(1)" ng-show="showBtns.approval") 批准

#modal2.modal.modal2.modalinfo(ng-if="showType == 2")
  .modal-content
    h6(style="text-align: center") 上传现场图片
    .modal-picture(ng-click="postUploadFile()")
        .icon(ng-show="!isUpLoad")
            img(src="{{getComponentPath('image/2.png')}}", alt="",style="width: 35px;height: 27px")
        img(ng-show="isUpLoad",src="data:image/jpeg;base64,{{imgData}}", alt="",style="width:100%;height:100%")
  .modal-footer
    a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href="") 取消
    a.modal-action.modal-close.waves-effect.waves-green.btn.red(href="",ng-click="uploadFile()") 上传